# Environment variables for Authelia and Nginx Proxy Manager
# IMPORTANT: Change these values before deploying!

# Timezone
TZ=America/Los_Angeles

# FreeIPA LDAP Configuration
LDAP_URL=ldap://ipa1.insc.lcl
LDAP_BASE_DN=dc=insc,dc=lcl
LDAP_BIND_USER=uid=authelia,cn=users,cn=accounts,dc=insc,dc=lcl
LDAP_BIND_PASSWORD=CHANGE_THIS_TO_YOUR_LDAP_PASSWORD

# Authelia Secrets (MUST BE CHANGED - Generate with: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
AUTHELIA_SESSION_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
AUTHELIA_STORAGE_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Domain Configuration
AUTHELIA_DOMAIN=auth.innosilicon.com
FREEIPA_DOMAIN=ipa1.innosilicon.com
SESSION_DOMAIN=innosilicon.com
