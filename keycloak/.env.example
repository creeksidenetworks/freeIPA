# Keycloak Environment Configuration
# Copy this file to .env and update the values for your environment
# IMPORTANT: Change all passwords before deployment!

# Database Configuration
# PostgreSQL database settings used by Keycloak
POSTGRES_DB=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=SecureDBPassword123!

# Keycloak Admin Configuration
# Initial admin user credentials for Keycloak management console
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=SecureAdminPassword123!

# FreeIPA Configuration
# FreeIPA server details for LDAP integration
FREEIPA_SERVER=ipa1.icm.lcl
FREEIPA_DOMAIN=icm.lcl
FREEIPA_REALM=ICM.LCL

# LDAP Bind User Configuration
# Service account for Keycloak to connect to FreeIPA LDAP
# Note: Use either cn=users,cn=accounts (regular user) or cn=sysaccounts,cn=etc (system account)
FREEIPA_BIND_DN=uid=ldapauth,cn=sysaccounts,cn=etc,dc=icm,dc=lcl
FREEIPA_BIND_PASSWORD=your_ldap_bind_password

# Network Configuration
# Hostname and port configuration for Keycloak
KEYCLOAK_HOSTNAME=keycloak.icm.lcl
KEYCLOAK_PORT=8080