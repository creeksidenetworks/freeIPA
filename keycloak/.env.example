# Keycloak Environment Configuration
# Copy this file to .env and update the values for your environment
# IMPORTANT: Change all passwords before deployment!

# PostgreSQL Database Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=change_this_password

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_this_password

# Keycloak Hostname Configuration
KC_HOSTNAME=keycloak.example.com

# Keycloak Internal Hostname
KC_HOSTNAME_INTERNAL=keycloak.internal.local

# FreeIPA Server
FREEIPA_SERVER_HOST=ipa-server.example.com
FREEIPA_SERVER_IP=192.168.1.100

# FreeIPA LDAP Configuration
KC_LDAP_URL=ldap://your-ipa-server:389
KC_LDAP_BASE_DN=cn=accounts,dc=example,dc=com
KC_LDAP_USERS_DN=cn=users,cn=accounts,dc=example,dc=com
KC_LDAP_GROUPS_DN=cn=groups,cn=accounts,dc=example,dc=com
KC_LDAP_BIND_DN=uid=ldapauth,cn=sysaccounts,cn=etc,dc=example,dc=com
KC_LDAP_BIND_CREDENTIAL=change_this_password

# Keycloak HTTP Port
KEYCLOAK_HTTP_PORT=8080
